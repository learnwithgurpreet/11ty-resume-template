<div class="pt-8 pb-12">
  <h3 class="font-medium text-xl uppercase mb-3" id="connect">Connnect</h3>
  <div>
    {% if author.email %}
      <a aria-label="email" href="mailto:{{ author.email }}" rel="noopener noreferrer" target="_blank" class="inline-flex w-12 h-12 justify-center items-center rounded-full highlight hover:shadow-lg transition-shadow duration-150">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" fill="currentColor" height="24" viewBox="0 0 24 24" class="w-6 h-6">
          <path
            d="M12 .02c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm6.99 6.98l-6.99 5.666-6.991-5.666h13.981zm.01 10h-14v-8.505l7 5.673 7-5.672v8.504z" />
        </svg>
      </a>
    {% endif %}
    {% for item in author.connect %}
      <a aria-label="{{ item.name }}" href="{{ item.url }}" rel="noopener noreferrer" target="_blank" class="inline-flex w-12 h-12 justify-center items-center ml-2 rounded-full highlight hover:shadow-lg transition-shadow duration-150">
        {% if item.icon %}
          {{ item.icon | safe }}
        {% endif %}
      </a>
    {% endfor %}
  </div>
</div>